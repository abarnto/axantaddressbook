{% extends "master.jinja" %}

{% block master_title %}
Nuovo Contatto
{% endblock %}

{% block contents %}
<form action="/contacts/add" method="post">
  <div class="form-group">
    {{ form.name.label }}
    {{ form.name(class="form-control") }}
  </div>
  <div class="form-group">
    {{ form.surname.label }}
    {{ form.surname(class="form-control") }}
  </div>
  <div class="form-group">
    {{ form.phone.label }}
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupPrepend">+39</span>
        </div>
        {{ form.phone(class="form-control") }}
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Aggiungi <i class="fa fa-plus" aria-hidden="true"></i></button>
</form>
{% endblock %}
